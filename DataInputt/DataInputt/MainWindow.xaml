<Window x:Class="DataInputt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataInputt"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <ListView x:Name="publikationen"  Height="188" VerticalAlignment="Top" Margin="0,23,0,0" SelectionChanged="publikationen_SelectionChanged" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding Type}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Name" HorizontalAlignment="Left" Margin="31,221,0,0" VerticalAlignment="Top"/>
        <Label Content="Beschreibung" HorizontalAlignment="Left" Margin="31,314,0,0" VerticalAlignment="Top"/>
        <Label Content="Datum" HorizontalAlignment="Left" Margin="31,283,0,0" VerticalAlignment="Top"/>
        <Label Content="Typ" HorizontalAlignment="Left" Margin="31,252,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="typ" HorizontalAlignment="Left" Margin="132,252,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Beschreibung" HorizontalAlignment="Left" Height="100" Margin="132,318,0,0" VerticalAlignment="Top" Width="376">

        </TextBox>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="18" Margin="132,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376"/>
        <DatePicker x:Name="DatePicker" HorizontalAlignment="Left" Height="26" Margin="132,283,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-7.524,-0.835"/>
        <Label Content="Link" HorizontalAlignment="Left" Margin="531,221,0,0" VerticalAlignment="Top"/>
        <Label Content="Publisher" HorizontalAlignment="Left" Margin="531,252,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="link" HorizontalAlignment="Left" Height="18" Margin="609,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376"/>
        <TextBox x:Name="publisher" HorizontalAlignment="Left" Height="18" Margin="609,256,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376"/>
        <Button Content="Speicher" HorizontalAlignment="Left" Height="36" Margin="783,426,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click_1"/>
        <Button Content="Löschen" HorizontalAlignment="Left" Height="36" Margin="894,426,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click"/>
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="995">
            <MenuItem Header="Neue"></MenuItem>
            <MenuItem Header="Importieren" Click="MenuItem_Click_1"></MenuItem>
            <MenuItem Header="Exportieren" Click="MenuItem_Click"></MenuItem>
        </Menu>
        <Label Content="Medium" HorizontalAlignment="Left" Margin="531,287,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="medium" HorizontalAlignment="Left" Height="18" Margin="609,291,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="531,318,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="id" HorizontalAlignment="Left" Height="18" Margin="609,322,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376"/>

    </Grid>
</Window>
